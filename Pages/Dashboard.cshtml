@page
@model TaskOrganizer.Pages.DashboardModel
@{
    // Tiyakin na ang Model ay tama: @model TaskOrganizer.Pages.DashboardModel
    ViewData["Title"] = "Dashboard";
    Layout = null;
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* ❗ CSS RESET ❗ */
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }

    /* ❗ THEME COLORS (TULAD NG SA MYTASKS.CSHTML) ❗ */
    .color-primary { background-color: #8B453A; } /* Dark Brown */
    .color-secondary { background-color: #D0B8A8; } /* Light Brown/Tan */
    .color-accent { background-color: #DFD3C3; }
    .color-light { background-color: #F8EDE3; }
    .text-primary { color: #8B453A; }
    .text-secondary { color: #D0B8A8; }
    .text-dark { color: #222222; }
    
    .sidebar-bg { background-color: #8B453A; }
    .main-bg { background-color: #F8EDE3; }
    .card-bg { background-color: white; }

    .link-text { font-size: 1.05rem; font-weight: 500; }

    .active-link {
        background-color: #D0B8A8;
        color: #3A0519;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-weight: 700;
    }

    .hover-link:hover {
        background-color: #D0B8A8;
        opacity: 0.9;
        color: #3A0519;
    }

    .user-btn {
        background-color: #DFD3C3;
        color: #8B453A;
        font-weight: bold;
        border: 1px solid #D0B8A8;
    }

    .user-btn:hover {
        background-color: #8B453A;
        color: white;
        box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
    }

    .custom-scrollbar::-webkit-scrollbar { width: 8px; }
    .custom-scrollbar::-webkit-scrollbar-thumb { background-color: #8B453A; border-radius: 20px; }
    .border-primary-accent { border-color: #8B453A; }
    .text-primary-accent { color: #8B453A; }
    .modal-backdrop { background-color: rgba(0, 0, 0, 0.6); }

    /* --- CSS for Circular Progress Bar (Donut Chart) --- */
    .progress-ring {
        position: relative;
        display: inline-block;
        width: 150px; /* Chart size */
        height: 150px;
    }

    .progress-ring svg {
        transform: rotate(-90deg); /* Start at the top */
        overflow: visible; /* Tiyakin na makikita ang circle */
    }

    .progress-ring-circle {
        transition: stroke-dashoffset 0.5s ease-in-out;
    }
</style>

<div class="flex h-screen overflow-hidden">

    <div class="sidebar-bg w-64 text-white p-4 flex flex-col flex-shrink-0">
        <div class="mb-8 p-2">
            <h1 class="text-2xl font-bold">📋 TaskBoard</h1>
            <p class="text-base opacity-80">Employee Panel</p>
        </div>

        <nav class="space-y-2 flex-grow">
            <a href="/Dashboard" class="flex items-center space-x-3 px-4 py-3 rounded-xl active-link">
                <i class="fas fa-chart-line w-5"></i>
                <span class="link-text">Dashboard</span>
            </a>

            <a href="/MyTasks" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/90 hover:text-dark">
                <i class="fas fa-tasks w-5"></i>
                <span class="link-text">My Tasks</span>
            </a>

            <a href="/Calendar" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/90 hover:text-dark">
                <i class="fas fa-calendar-alt w-5"></i>
                <span class="link-text">Calendar</span>
            </a>

            <a href="/Reports" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 mb-4 text-white/90 hover:text-dark">
                <i class="fas fa-chart-bar w-5"></i>
                <span class="link-text">Reports</span>
            </a>
        </nav>

        <div class="mt-auto">
            <a href="#" onclick="showLogoutModal(event)" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/70 hover:bg-white/30 hover:text-dark">
                <i class="fas fa-sign-out-alt w-5"></i>
                <span class="link-text font-semibold">Logout</span>
            </a>
        </div>
    </div>
    
    <div class="flex-1 main-bg p-8 overflow-y-auto custom-scrollbar">

        <div class="flex justify-between items-center mb-8 flex-shrink-0 card-bg p-6 rounded-xl shadow-lg border-t-4 border-secondary">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">My Dashboard</h1>
                <p class="text-lg text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <button class="user-btn text-lg px-5 py-2 rounded-lg font-semibold shadow-md transition duration-150 flex items-center gap-2">
                <i class="fas fa-user"></i> @Model.EmployeeUsername
            </button>
        </div>

        <div class="grid grid-cols-4 gap-6 mb-8 flex-shrink-0">

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-primary-accent">
                <div>
                    <p class="text-gray-500 text-lg">Total Tasks</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.TotalTasksCount</h2>
                    <p class="text-base text-gray-400">All your tasks</p>
                </div>
                <div class="text-3xl text-primary-accent opacity-70"><i class="fas fa-tasks"></i></div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-green-500">
                <div>
                    <p class="text-gray-500 text-lg">Completed</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.CompletedTasksCount</h2>
                    <p class="text-base text-gray-400">Finished tasks</p>
                </div>
                <div class="text-3xl text-green-500 opacity-70"><i class="fas fa-check-circle"></i></div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-yellow-500">
                <div>
                    <p class="text-gray-500 text-lg">Pending</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.PendingTasksCount</h2>
                    <p class="text-base text-gray-400">In progress</p>
                </div>
                <div class="text-3xl text-yellow-500 opacity-70"><i class="fas fa-hourglass-half"></i></div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-red-500">
                <div>
                    <p class="text-gray-500 text-lg">High Priority</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.HighPriorityTasksCount</h2>
                    <p class="text-base text-gray-400">Urgent tasks</p>
                </div>
                <div class="text-3xl text-red-500 opacity-70"><i class="fas fa-exclamation-triangle"></i></div>
            </div>

        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

            <div class="card-bg p-8 rounded-xl shadow-lg flex flex-col min-h-[400px] lg:col-span-1">
                <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-3 mb-6 pb-2 border-b">
                    <i class="fas fa-chart-pie text-red-700"></i> My Task Completion
                </h2>

                <div class="flex items-center justify-center flex-grow py-8">
                    <div class="flex flex-col items-center">
                        <div class="progress-ring" id="employeeTaskProgressRing">
                            <svg width="150" height="150" viewBox="0 0 150 150">
                                <circle class="text-gray-300"
                                    stroke="currentColor"
                                    stroke-width="10"
                                    fill="transparent"
                                    r="65"
                                    cx="75"
                                    cy="75" />
                                <circle class="progress-ring-circle text-primary"
                                    stroke="currentColor"
                                    stroke-width="10"
                                    fill="transparent"
                                    r="65"
                                    cx="75"
                                    cy="75"
                                    style="stroke-dasharray: 408.4; stroke-dashoffset: 408.4;" />
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span class="text-4xl font-bold text-primary" id="employeeCompletionPercentage">0%</span>
                            </div>
                        </div>
                        <p class="text-xl font-semibold text-gray-600 mt-6">
                            Tasks Completed: 
                            <span id="employeeCompletedTasksCount">@Model.CompletedTasksCount</span>/
                            <span id="employeeTotalTasksCount">@Model.TotalTasksCount</span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="card-bg p-8 rounded-xl shadow-lg flex flex-col min-h-[400px] lg:col-span-2">
                <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-3 mb-6 pb-2 border-b">
                    <i class="fas fa-history text-primary"></i> Recent Completed Tasks
                </h2>

                @if (Model.RecentCompletedTasks.Any())
                {
                    <div class="space-y-4 max-h-[300px] overflow-y-auto custom-scrollbar">
                        @foreach (var task in Model.RecentCompletedTasks)
                        {
                            <div class="p-4 bg-gray-50 rounded-lg border-l-4 border-green-500 flex justify-between items-center transition duration-150 hover:shadow-md">
                                <div>
                                    <p class="text-lg font-bold text-dark">@task.Title</p>
                                    <p class="text-sm text-gray-600">Priority: <span class="font-semibold text-primary">@task.Priority</span></p>
                                </div>
                                <div class="text-right">
                                    <span class="text-sm font-medium px-3 py-1 bg-green-100 text-green-700 rounded-full">COMPLETED</span>
                                    <p class="text-xs text-gray-500 mt-1">
                                        Finished: @(task.CompletionDate.HasValue ? task.CompletionDate.Value.ToString("MMM dd, hh:mm tt") : "N/A")
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="flex flex-col items-center justify-center flex-grow py-12">
                        <i class="fas fa-clipboard-check text-gray-300 text-5xl mb-4"></i>
                        <p class="text-gray-700 text-xl font-semibold mt-4">No completed tasks recently</p>
                        <p class="text-lg text-gray-500 text-center max-w-sm">Start finishing your tasks to see history here!</p>
                    </div>
                }
            </div>

        </div>

    </div>
</div>

<div id="logoutModal" class="fixed inset-0 z-50 hidden modal-backdrop flex items-center justify-center transition-opacity duration-300 ease-out">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-sm transform transition-all duration-300 ease-out scale-95">

        <div class="text-center mb-6">
            <div class="flex justify-center mb-3">
                <i class="fas fa-exclamation-triangle text-secondary text-4xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-1">Are you sure?</h4>
            <p class="text-base text-gray-500">You will be redirected to the login page.</p>
        </div>

        <div class="space-y-3">
            <a href="/Login" class="block w-full text-center color-primary text-white py-2 rounded-lg font-semibold hover:bg-secondary transition duration-150">
                Yes, Log out
            </a>

            <button onclick="hideLogoutModal()" class="block w-full text-center border-2 border-gray-300 text-gray-700 py-2 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                Cancel
            </button>
        </div>

    </div>
</div>

<script>
    // Get the modal element
    const modal = document.getElementById('logoutModal');

    // Function to show the modal
    function showLogoutModal(event) {
        // Stop the link from navigating immediately
        event.preventDefault();
        // Display the modal
        modal.classList.remove('hidden');
    }

    // Function to hide the modal
    function hideLogoutModal() {
        // Hide the modal
        modal.classList.add('hidden');
    }

    // --- NEW: JavaScript for Circular Progress Bar Logic (Employee) ---

    // Function to set the progress bar based on percentage
    function setEmployeeProgress(percent) {
        const circle = document.querySelector('#employeeTaskProgressRing .progress-ring-circle');
        const percentageText = document.getElementById('employeeCompletionPercentage');

        // r = 65, stroke-width = 10, C = 2 * PI * r = 408.4 (Circumference)
        const circumference = 408.4;

        // Calculate the offset based on percentage
        const offset = circumference - (percent / 100) * circumference;

        // Apply offset and update text
        circle.style.strokeDashoffset = offset;
        percentageText.textContent = `${Math.round(percent)}%`;
    }

    // --- Data Initialization ---
    // Kunin ang data mula sa Razor Model (C#)
    const totalTasks = @Model.TotalTasksCount;
    const completedTasks = @Model.CompletedTasksCount;
    const completionRate = @Model.CompletionPercentage; // Ito ay double na (e.g., 33.33)

    // Update the HTML text counts
    document.getElementById('employeeTotalTasksCount').textContent = totalTasks;
    document.getElementById('employeeCompletedTasksCount').textContent = completedTasks;

    // Set the progress bar
    setEmployeeProgress(completionRate);
    
</script>