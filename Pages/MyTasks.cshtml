@page
@model MyTasksModel
@{
    ViewData["Title"] = "My Tasks";
    Layout = null;
}

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" xintegrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    /* ❗ CSS RESET ❗ */
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
        font-family: 'Inter', sans-serif;
    }

    .color-primary {
        background-color: #8B453A;
    }

    .color-secondary {
        background-color: #D0B8A8;
    }

    .color-accent {
        background-color: #DFD3C3;
    }

    .color-light {
        background-color: #F8EDE3;
    }

    .text-primary {
        color: #8B453A;
    }

    .sidebar-bg {
        background-color: #8B453A;
    }

    .main-bg {
        background-color: #F8EDE3;
    }

    .card-bg {
        background-color: white;
    }

    .link-text {
        font-size: 1.05rem;
        font-weight: 500;
    }

    .active-link {
        background-color: #D0B8A8;
        color: #3A0519;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-weight: 700;
    }

    .hover-link:hover {
        background-color: #D0B8A8;
        opacity: 0.9;
        color: #3A0519;
    }

    .user-btn {
        background-color: #D0B8A8;
        color: #8B453A;
        font-weight: bold;
        border: 1px solid #DFD3C3;
    }

        .user-btn:hover {
            background-color: #8B453A;
            color: white;
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #8B453A;
        border-radius: 20px;
    }

    .border-primary-accent {
        border-color: #8B453A;
    }

    .text-primary-accent {
        color: #8B453A;
    }

    /* Custom Status Badges */
    .status-badge-pending {
        background-color: #ffedd5;
        color: #f97316;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    .status-badge-inprogress {
        background-color: #fef9c3;
        color: #eab308;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    .status-badge-completed {
        background-color: #d1fae5;
        color: #10b981;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    .status-badge-overdue { /* Overdue Badge Style */
        background-color: #fee2e2; /* Light Red */
        color: #ef4444; /* Bright Red */
        font-weight: 700;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }
</style>

<div class="flex h-screen overflow-hidden">

    <div class="sidebar-bg w-64 text-white p-4 flex flex-col flex-shrink-0">
        <div class="mb-8 p-2">
            <h1 class="text-2xl font-bold">📋 TaskBoard</h1>
            <p class="text-base opacity-80">Employee Panel</p>
        </div>

        <nav class="space-y-2 flex-grow">
            <a href="/Dashboard" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/90 hover:text-dark">
                <i class="fas fa-chart-line w-5"></i>
                <span class="link-text">Dashboard</span>
            </a>

            <a href="/MyTasks" class="flex items-center space-x-3 px-4 py-3 rounded-xl active-link transition duration-150">
                <i class="fas fa-tasks w-5"></i>
                <span class="link-text">My Tasks</span>
            </a>

            <a href="/Calendar" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/90 hover:text-dark">
                <i class="fas fa-calendar-alt w-5"></i>
                <span class="link-text">Calendar</span>
            </a>

            <a href="/Reports" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/90 hover:text-dark">
                <i class="fas fa-chart-bar w-5"></i>
                <span class="link-text">Reports</span>
            </a>
        </nav>

        <div class="mt-auto">
            <a href="#" onclick="showLogoutModal(event)" class="flex items-center space-x-3 px-4 py-3 rounded-xl hover-link transition duration-150 text-white/70 hover:bg-white/30 hover:text-dark">
                <i class="fas fa-sign-out-alt w-5"></i>
                <span class="link-text font-semibold">Logout</span>
            </a>
        </div>
    </div>
    <div class="flex-1 main-bg p-8 overflow-y-auto custom-scrollbar">

        <div class="flex justify-between items-center mb-8 flex-shrink-0">
            <div>
                <h1 class="text-4xl font-bold text-gray-800">My Tasks</h1>
                <p class="text-lg text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
            </div>
            <button class="user-btn text-lg px-5 py-2 rounded-lg font-semibold shadow-md transition duration-150 flex items-center gap-2">
                <i class="fas fa-user"></i> @Model.EmployeeUsername
            </button>
        </div>

        <div class="grid grid-cols-4 gap-6 mb-8 flex-shrink-0">

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-primary-accent">
                <div>
                    <p class="text-gray-500 text-lg">Total Tasks</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.TotalTasksCount</h2>
                    <p class="text-base text-gray-400">All your tasks</p>
                </div>
                <div class="text-3xl text-primary-accent opacity-70">
                    <i class="fas fa-tasks"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-green-500">
                <div>
                    <p class="text-gray-500 text-lg">Completed</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.CompletedTasksCount</h2>
                    <p class="text-base text-gray-400">Finished tasks</p>
                </div>
                <div class="text-3xl text-green-500 opacity-70">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-yellow-500">
                <div>
                    <p class="text-gray-500 text-lg">Pending</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.PendingTasksCount</h2>
                    <p class="text-base text-gray-400">In progress</p>
                </div>
                <div class="text-3xl text-yellow-500 opacity-70">
                    <i class="fas fa-hourglass-half"></i>
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg flex items-center justify-between border-l-4 border-red-600">
                <div>
                    <p class="text-gray-500 text-lg">Missing/Overdue</p>
                    <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.OverdueTasksCount</h2>
                    <p class="text-base text-gray-400">Past due tasks</p>
                </div>
                <div class="text-3xl text-red-600 opacity-70">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
            </div>

        </div>
        <div class="card-bg p-8 rounded-xl shadow-lg min-h-full">
            <h3 class="text-2xl font-semibold mb-6 pb-2 text-gray-800">All My Tasks</h3>

            <div class="flex items-center space-x-4 mb-8 text-gray-600">
                <span class="font-medium">All Tasks</span>
                <span class="text-gray-400">|</span>
                <span class="font-medium">All Priorities</span>
                <span class="text-gray-400">|</span>
                <span class="text-primary-accent font-medium cursor-pointer">Clear Filters</span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                @if (Model.CurrentPendingTasks.Any())
                {
                    @foreach (var task in Model.CurrentPendingTasks)
                    {
                        // Logic para sa Status
                        string displayStatus = task.Status;
                        string statusBadgeClass = task.Status == "Pending" ? "status-badge-pending" : "status-badge-inprogress";
                        string statusDisplay = task.Status;

                        // I-check kung Overdue ito (Ginamit ang TaskStatuses dictionary)
                        if (Model.TaskStatuses.ContainsKey(task.Id!) && Model.TaskStatuses[task.Id!] == "Overdue")
                        {
                            statusBadgeClass = "status-badge-overdue"; // Red badge
                            statusDisplay = "Overdue"; // Ang display text
                            displayStatus = "Overdue"; // I-set ang display status
                        }

                        string priorityText = task.Priority == "High" ? "text-red-500 font-bold" : (task.Priority == "Medium" ? "text-yellow-600 font-semibold" : "text-green-600");

                        // KUNIN ANG ASSIGNER NAME
                        string assignerName = "System Admin"; // Default fallback
                        if (!string.IsNullOrEmpty(task.AssignerId) && Model.EmployeeIdToNameMap.ContainsKey(task.AssignerId))
                        {
                            assignerName = Model.EmployeeIdToNameMap[task.AssignerId];
                        }

                        // I-check kung ang task ay Overdue para sa border color
                        string borderClass = displayStatus == "Overdue" ? "border-red-500" : "border-primary-accent";

                        <div class="card-bg p-6 rounded-xl shadow-md border-t-4 @borderClass flex flex-col justify-between hover:shadow-xl transition duration-200">
                            <div>
                                <div class="flex justify-between items-start mb-3">
                                    <h4 class="text-lg font-bold text-gray-800 mr-4">@task.Title</h4>
                                    <span class="@statusBadgeClass text-xs uppercase flex-shrink-0">@statusDisplay</span>
                                </div>
                                <p class="text-sm text-gray-600 mb-4 h-12 overflow-hidden">@task.Description</p>

                                <div class="space-y-2 text-sm text-gray-700 mt-4">
                                    @if (task.DueDate.HasValue)
                                    {
                                        <p class="flex items-center gap-2">
                                            <i class="fas fa-calendar-alt @(displayStatus == "Overdue" ? "text-red-500" : "text-primary-accent") w-4"></i>
                                            <strong>Due:</strong>
                                            <span>@task.DueDate.Value.ToString("MMM dd, yyyy")</span>
                                            <span class="font-bold @(displayStatus == "Overdue" ? "text-red-700" : "text-gray-700")">(@task.DueDate.Value.ToString("hh:mm tt"))</span>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="flex items-center gap-2">
                                            <i class="fas fa-calendar-alt text-primary-accent w-4"></i>
                                            <strong>Due Date:</strong>
                                            <span class="text-gray-400">No Date Set</span>
                                        </p>
                                    }

                                    <p class="flex items-center gap-2">
                                        <i class="fas fa-fire-alt @(task.Priority == "High" ? "text-red-500" : "text-primary-accent") w-4"></i>
                                        <strong>Priority:</strong>
                                        <span class="@priorityText">@task.Priority</span>
                                    </p>

                                    <p class="flex items-center gap-2">
                                        <i class="fas fa-user-shield text-primary-accent w-4"></i>
                                        <strong>Assigned By:</strong>
                                        <span class="font-semibold text-gray-800">@assignerName</span>
                                    </p>
                                </div>
                            </div>

                            <form method="post" asp-page-handler="MarkAsComplete">
                                <input type="hidden" name="id" value="@task.Id" />
                                <button type="submit" class="w-full mt-4 bg-green-500 text-white py-2 rounded-lg font-semibold hover:bg-green-600 transition duration-150 shadow-md">
                                    <i class="fas fa-check-square mr-2"></i> Mark as Done
                                </button>
                            </form>
                        </div>
                    }
                }
                else
                {
                    <div class="col-span-full text-center py-12 text-gray-500 border-2 border-dashed border-gray-300 rounded-xl">
                        <i class="fas fa-box-open text-gray-300 text-4xl mb-3"></i>
                        <p class="text-lg font-medium">Walang nakabinbing tasks.</p>
                        <p class="text-sm">Maaari kang makipag-ugnayan sa iyong Admin para sa mga bagong assignment.</p>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

<div id="logoutModal" class="fixed inset-0 z-50 hidden modal-backdrop flex items-center justify-center transition-opacity duration-300 ease-out">
    <div class="bg-white p-8 rounded-xl shadow-2xl w-full max-w-sm transform transition-all duration-300 ease-out scale-95">

        <div class="text-center mb-6">
            <div class="flex justify-center mb-3">
                <i class="fas fa-exclamation-triangle text-secondary text-4xl"></i>
            </div>
            <h4 class="text-xl font-bold text-gray-800 mb-1">Are you sure?</h4>
            <p class="text-base text-gray-500">You will be redirected to the login page.</p>
        </div>

        <div class="space-y-3">
            <a href="/Login" class="block w-full text-center color-primary text-white py-2 rounded-lg font-semibold hover:bg-secondary hover:text-dark transition duration-150">
                Yes, Log out
            </a>

            <button onclick="hideLogoutModal()" class="block w-full text-center border-2 border-gray-300 text-gray-700 py-2 rounded-lg font-semibold hover:bg-gray-100 transition duration-150">
                Cancel
            </button>
        </div>

    </div>
</div>
<script>
    // Get the modal element
    const modal = document.getElementById('logoutModal');

    // Function to show the modal (for Logout)
    function showLogoutModal(event) {
        // Stop the link from navigating immediately
        event.preventDefault();
        // Display the modal
        modal.classList.remove('hidden');
    }

    // Function to hide the modal (for Logout)
    function hideLogoutModal() {
        // Hide the modal
        modal.classList.add('hidden');
    }
</script>