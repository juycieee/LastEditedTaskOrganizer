@{
    // C# Block: Prepare a safer, simpler JSON payload for JavaScript
    // 1. Select only the necessary fields (DueDate and Priority) for calendar marking.
    var taskDataForJs = Model.AllMyTasks
        .Where(t => t.DueDate.HasValue && t.Status != "Completed")
        .Select(t => new
        {
            // Convert to ISO 8601 string format for reliable JS Date parsing
            DueDate = t.DueDate.Value.ToString("yyyy-MM-ddTHH:mm:ss"),
            t.Priority
        });

    // 2. Serialize the C# object to a JSON string.
    var jsonTasks = System.Text.Json.JsonSerializer.Serialize(taskDataForJs);

    // 3. CRITICAL FIX: Escape single quotes ('\'') within the JSON string
    //    so the string literal assignment in JavaScript does not break.
    var jsSafeJson = jsonTasks.Replace("'", "\\'");
}

<script>
    // Task Data from C# Model (Converted to JavaScript object)
    // FIX: Inject the escaped JSON string inside single quotes, then use JSON.parse()
    const allTasks = JSON.parse('@Html.Raw(jsSafeJson)');

    // Convert DueDate string to Date objects for easier manipulation
    const taskDates = allTasks.map(task => {
        // Use the Date object to correctly parse the ISO string
        const date = new Date(task.DueDate);

        // Return a clean date key (YYYY-M-D) for lookup, using 1-based month index
        const dateKey = `${date.getFullYear()}-${date.getMonth() + 1}-${date.getDate()}`;

        return {
            dateKey: dateKey,
            priority: task.priority
        };
    });

    // Group tasks by date for calendar highlighting
    const tasksByDate = taskDates.reduce((acc, task) => {
        if (!acc[task.dateKey]) {
            acc[task.dateKey] = [];
        }
        acc[task.dateKey].push(task.priority);
        return acc;
    }, {});


    /* --- Calendar JavaScript --- */

    const modal = document.getElementById('logoutModal');
    function showLogoutModal(event) {
        event.preventDefault();
        modal.classList.remove('hidden');
        modal.querySelector('.scale-95').classList.remove('scale-95');
        modal.querySelector('.scale-95').classList.add('scale-100');
    }
    function hideLogoutModal() {
        modal.querySelector('.scale-100').classList.remove('scale-100');
        modal.querySelector('.scale-95').classList.add('scale-95');
        setTimeout(() => modal.classList.add('hidden'), 300);
    }

    let currentDay = new Date();
    let currentMonth = currentDay.getMonth();
    let currentYear = currentDay.getFullYear();

    const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
    const datesContainer = document.getElementById('calendarDates');
    const monthDisplay = document.getElementById('currentMonthDisplay');
    const today = new Date();

    // Normalize today's date for comparison
    const todayYear = today.getFullYear();
    const todayMonth = today.getMonth();
    const todayDate = today.getDate();

    const PRIMARY_COLOR_BG = '#8B453A';
    const SECONDARY_COLOR_BG = '#D0B8A8';

    // FUNCTION: Renders the calendar view
    function renderCalendar() {
        const date = new Date(currentYear, currentMonth, 1);
        const firstDayIndex = date.getDay();
        const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();

        datesContainer.innerHTML = '';
        monthDisplay.textContent = monthNames[currentMonth] + ' ' + currentYear;

        // 1. Render blank cells (for days before the 1st)
        for (let i = 0; i < firstDayIndex; i++) {
            const emptyCell = document.createElement('span');
            emptyCell.classList.add('calendar-cell');
            datesContainer.appendChild(emptyCell);
        }

        // 2. Render the dates
        for (let day = 1; day <= daysInMonth; day++) {
            const dayCell = document.createElement('span');
            dayCell.classList.add('calendar-cell', 'rounded-xl', 'cursor-pointer', 'select-none');
            dayCell.textContent = day;

            const isToday = day === todayDate && currentMonth === todayMonth && currentYear === todayYear;

            // Check for tasks on this specific date
            // Note: Month index in dateKey is 1-based (currentMonth + 1)
            const dateKey = `${currentYear}-${currentMonth + 1}-${day}`;
            const tasksOnDay = tasksByDate[dateKey];

            if (tasksOnDay && tasksOnDay.length > 0) {
                dayCell.classList.add('has-task');

                // Check if any task is high priority for a red dot
                if (tasksOnDay.includes("High")) {
                    dayCell.classList.add('high-priority-dot');
                }

                dayCell.onclick = () => {
                    // You can implement task filtering here if needed
                    console.log(`Tasks for ${monthNames[currentMonth]} ${day}, ${currentYear}: ${tasksOnDay.length} tasks`);
                };
            }


            if (isToday) {
                // Style for Today: Primary color BG, white text
                dayCell.classList.remove('hover:bg-gray-200');
                dayCell.style.backgroundColor = PRIMARY_COLOR_BG;
                dayCell.classList.add('text-white', 'font-bold', 'shadow-md');
            } else {
                dayCell.classList.add('hover:bg-gray-200');

                if (currentMonth < todayMonth && currentYear === todayYear || currentYear < todayYear) {
                    // Past months/years
                    dayCell.classList.add('text-gray-400', 'cursor-default');
                    dayCell.classList.remove('hover:bg-gray-200');
                } else if (currentMonth === todayMonth && currentYear === todayYear && day < todayDate) {
                    // Past days in the current month
                    dayCell.classList.add('text-gray-400', 'cursor-default');
                    dayCell.classList.remove('hover:bg-gray-200');
                } else {
                    // Future days/months
                    dayCell.classList.add('text-gray-700');

                    // Hover effect for interactive days
                    dayCell.addEventListener('mouseenter', () => {
                        dayCell.style.backgroundColor = SECONDARY_COLOR_BG;
                    });
                    dayCell.addEventListener('mouseleave', () => {
                        dayCell.style.backgroundColor = 'transparent';
                    });
                }
            }

            datesContainer.appendChild(dayCell);
        }
    }

    document.getElementById('prevMonth').addEventListener('click', () => {
        currentMonth--;
        if (currentMonth < 0) {
            currentMonth = 11;
            currentYear--;
        }
        renderCalendar();
    });

    document.getElementById('nextMonth').addEventListener('click', () => {
        currentMonth++;
        if (currentMonth > 11) {
            currentMonth = 0;
            currentYear++;
        }
        renderCalendar();
    });

    renderCalendar();

</script>