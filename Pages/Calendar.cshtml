<style>
    body, html {
        margin: 0 !important;
        padding: 0 !important;
        height: 100%;
        width: 100%;
        overflow: hidden;
        font-family: 'Inter', sans-serif;
    }

    /* Color Palette */
    .color-primary {
        background-color: #8B453A; /* Deep Terracotta Brown */
    }

    .color-secondary {
        background-color: #D0B8A8; /* Muted Taupe/Rose */
    }

    .color-accent {
        background-color: #DFD3C3; /* Light Cream */
    }

    .color-light {
        background-color: #F8EDE3; /* Off-White/Ivory */
    }

    .text-primary {
        color: #8B453A;
    }

    .text-secondary {
        color: #D0B8A8;
    }

    .text-dark {
        color: #222222;
    }

    .sidebar-bg {
        background-color: #8B453A;
    }

    .main-bg {
        background-color: #F8EDE3;
    }

    .card-bg {
        background-color: white;
    }

    .link-text {
        font-size: 1.05rem;
        font-weight: 500;
    }

    .active-link {
        background-color: #D0B8A8;
        color: #3A0519;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        font-weight: 700;
    }

    .hover-link:hover {
        background-color: #D0B8A8;
        opacity: 0.9;
        color: #3A0519;
    }

    .user-btn {
        background-color: #D0B8A8;
        color: #8B453A;
        font-weight: bold;
        border: 1px solid #DFD3C3;
    }

        .user-btn:hover {
            background-color: #8B453A;
            color: white;
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    .custom-scrollbar::-webkit-scrollbar {
        width: 8px;
    }

    .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: #8B453A;
        border-radius: 20px;
    }

    .border-primary-accent {
        border-color: #8B453A;
    }

    .text-primary-accent {
        color: #8B453A;
    }

    .calendar-cell {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 40px;
        font-weight: 500;
        transition: background-color 0.15s, transform 0.1s;
        position: relative;
    }

    .has-task::after {
        content: '';
        position: absolute;
        bottom: 4px;
        left: 50%;
        transform: translateX(-50%);
        width: 6px;
        height: 6px;
        background-color: #D0B8A8; /* Secondary color dot */
        border-radius: 50%;
        opacity: 0.8;
    }

    .high-priority-dot::after {
        background-color: #EF4444; /* Red dot for High Priority */
    }

    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.6);
    }
</style>

<div class="flex h-screen overflow-hidden">

    <div class="sidebar-bg w-64 text-white p-4 flex flex-col flex-shrink-0">
        <div class="mb-8 p-2">
            <h1 class="text-2xl font-bold">📋 TaskBoard</h1>
            <p class="text-base opacity-80">Employee Panel</p>
        </div>

        <nav class="space-y-2 flex-grow">
