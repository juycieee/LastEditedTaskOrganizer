                </div>

                <div class="grid grid-cols-7 text-center text-sm font-medium text-gray-500 gap-1 pb-2 border-b">
                    <span class="py-2">Sun</span><span class="py-2">Mon</span><span class="py-2">Tue</span><span class="py-2">Wed</span><span class="py-2">Thu</span><span class="py-2">Fri</span><span class="py-2">Sat</span>
                </div>
                <div id="calendarDates" class="grid grid-cols-7 text-center text-gray-700 gap-1 mt-2">
                </div>
            </div>

            <div class="card-bg p-6 rounded-xl shadow-lg overflow-y-auto max-h-[70vh]">
                <h3 class="text-2xl font-semibold mb-4 border-b pb-2 text-gray-800 sticky top-0 bg-white">
                    <i class="fas fa-clipboard-check text-primary"></i> Today's Tasks
                </h3>

                <div id="todaysTasksList">
                    @if (Model.TodaysTasks.Any())
                    {
                        // ❗ UPDATED: Inayos ang sorting logic. Ngayon, nagso-sort muna by DueDate (na may kasamang time),
                        // ❗ at pangalawa, by High Priority (descending) para sa tasks na walang specific time (optional check).
                        // ❗ Note: Ang DueDate sorting sa .cs file ay sapat na, pero inulit ko dito para sigurado.
                        @foreach (var task in Model.TodaysTasks.OrderBy(t => t.DueDate))
                        {
                            var priorityColor = task.Priority == "High" ? "bg-red-500" : (task.Priority == "Medium" ? "bg-yellow-500" : "bg-green-500");

                            <div class="p-3 mb-3 border border-gray-100 rounded-lg shadow-sm hover:shadow-md transition duration-150">
                                <div class="flex items-center justify-between mb-1">
                                    <h4 class="font-bold text-gray-800 text-lg">@task.Title</h4>
                                    <span class="@priorityColor text-white text-xs font-semibold px-2 py-0.5 rounded-full">
                                        @task.Priority
                                    </span>
                                </div>
                                <p class="text-sm text-gray-600 mb-2">@task.Description</p>

                                <p class="text-sm font-semibold text-primary-accent flex items-center gap-1">
                                    <i class="far fa-clock text-xs"></i>
                                    Due: @(task.DueDate.HasValue? task.DueDate.Value.ToString("hh:mm tt") : "Any Time Today")
                                </p>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-gray-500 py-10">
                            <i class="fas fa-smile-beam text-green-400 text-4xl mb-3"></i>
                            <p class="text-lg">No incomplete tasks due today.</p>
                            <p class="text-sm">You are all set for the day!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div id="logoutModal" class="fixed inset-0 z-50 hidden modal-backdrop flex items-center justify-center transition-opacity duration-300 ease-out">
