@page
@model TaskOrganizer.Pages.Register.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-dcZ6a6u+QHbX5gP0F0ZQ/5DwC1ElGfFY7u1y6m3Oa4k5+HxJ9y8Lzr/6qImQnP+mF8xA6djLM0h+4q45X+3xKw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<script src="https://cdn.tailwindcss.com"></script>

<style>
    /* Reset and Base Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', "Segoe UI", sans-serif;
    }

    /* ************************************************* */
    /* --- CENTERED LAYOUT --- */
    /* ************************************************* */
    html, body {
        height: 100%;
        min-height: 100vh;
        overflow-x: hidden;
    }

    body {
        background: linear-gradient(90deg, #f3b0f2, #fdf5b9);
        display: flex;
        justify-content: center;
        align-items: center;
        transition: background-color 0.3s;
    }

    .register-container {
        width: 100%;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    /* ************************************************* */
    /* --- Main Card/Box (MAXIMUM SIZE) --- */
    /* ************************************************* */
    .register-box {
        width: 95%;
        max-width: 1100px;
        min-height: 700px;
        height: auto;
        display: flex;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 20px 45px rgba(0,0,0,0.35);
        background-color: white;
        transition: box-shadow 0.3s ease-in-out;
    }

    /* ************************************************* */
    /* --- Left Panel (INFO/IMAGE - Deep Rose BG) --- */
    /* ************************************************* */
    .left-panel {
        width: 45%;
        text-align: center;
        background: #704264;
        color: white;
        padding: 60px 40px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        border-radius: 15px 0 0 15px;
    }

    .task-image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-top: auto;
        margin-top: 60px;
    }

    .task-image {
        width: 320px;
        height: auto;
    }

    .left-panel h2 {
        font-size: 38px;
        margin-bottom: 20px;
        font-weight: 700;
    }

    .left-panel p {
        opacity: 0.9;
        line-height: 1.7;
        margin-bottom: 0;
        font-size: 20px;
    }

    /* ******************************************** */
    /* --- Right Panel (FORM - COMPACT INPUTS) --- */
    /* ******************************************** */
    .right-panel {
        width: 55%;
        background: #DBAFA0;
        padding: 50px 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        border-radius: 0 15px 15px 0;
    }

        .right-panel h3 {
            font-size: 40px;
            text-align: center;
            margin-bottom: 10px;
            color: #49243E;
            font-weight: 700;
        }

        .right-panel small {
            opacity: 0.8;
            display: block;
            margin-bottom: 25px;
            font-size: 20px;
            color: #49243E;
        }

    .form-group {
        margin-bottom: 15px; /* BINABAAN ang spacing sa pagitan ng inputs */
        text-align: left;
    }

        .form-group input {
            width: 100%;
            padding: 10px 18px; /* BINABAAN ang padding para lumiit ang textbox (COMPRESSED) */
            border: 1px solid #49243E;
            border-radius: 8px;
            font-size: 18px;
            transition: border-color 0.3s, box-shadow 0.3s;
            background-color: white;
            color: #333;
        }

            .form-group input:focus {
                border-color: #BB8493;
                box-shadow: 0 0 0 3px rgba(187, 132, 147, 0.4);
                outline: none;
            }

    .submit-btn {
        width: 100%;
        background: #49243E;
        border: none;
        color: white;
        padding: 12px; /* BINABAAN ang padding (USUAL BUTTON SIZE) */
        font-size: 18px; /* BINABAAN ang font size (USUAL BUTTON SIZE) */
        letter-spacing: 0.5px;
        font-weight: 700;
        border-radius: 8px; /* Ginawang 8px para mas maging typical */
        cursor: pointer;
        margin-top: 20px;
        transition: background 0.3s, transform 0.2s, box-shadow 0.3s;
    }

        .submit-btn:hover {
            background: #704264;
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(73, 36, 62, 0.4);
        }

    .text-red {
        color: red;
        font-size: 15px;
        text-align: left;
        display: block;
        margin-top: 4px;
        font-weight: 500;
    }

    .role-label {
        font-size: 18px;
        font-weight: 600;
        color: #49243E;
        margin-bottom: 10px;
        text-align: left;
    }

    .role-option-label {
        font-size: 19px;
        color: black;
        font-weight: 400;
    }

    .role-radio {
        accent-color: #49243E;
    }

    .role-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .login-link-container {
        margin-top: 30px;
        text-align: center;
        font-size: 18px;
        color: #49243E;
    }

        .login-link-container a {
            color: #49243E;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s;
        }

            .login-link-container a:hover {
                text-decoration: underline;
                color: #704264;
            }

    /* Responsive adjustments for smaller screens */
    @@media (max-width: 800px) {
        .register-box {
            flex-direction: column;
            width: 95%;
            max-width: 450px;
            min-height: auto;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
        }

        .left-panel, .right-panel {
            width: 100%;
            padding: 35px;
        }

        .left-panel {
            border-radius: 15px 15px 0 0;
        }

        .right-panel {
            border-radius: 0 0 15px 15px;
        }

        .task-image {
            width: 280px;
        }
    }
</style>

<div class="register-container">
    <div class="register-box">

        <div class="left-panel">
            <div>
                <h2>Welcome to Employee Task Organizer</h2>
                <p>Create account for a better way to manage tasks. Let's keep your goals in line and your days less hectic.</p>
            </div>

            <div class="task-image-container">
                <img src="/images/4.png" alt="Task Icon" class="task-image">
            </div>
        </div>

        <div class="right-panel">
            <h3>CREATE NEW ACCOUNT</h3>
            <small>Organize today. Accomplish more tomorrow.</small>

            <div asp-validation-summary="All" class="text-red mb-3" style="text-align:center; font-weight:600;"></div>

            <form method="post">
                <div class="form-group">
                    <input asp-for="Input.Name" placeholder="Full Name" />
                    <span asp-validation-for="Input.Name" class="text-red"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Username" placeholder="Username" />
                    <span asp-validation-for="Input.Username" class="text-red"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Email" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-red"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.Password" type="password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-red"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" type="password" placeholder="Confirm Password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red"></span>
                </div>

                <div class="form-group role-group">
                    <label class="role-label block mb-2">Register as:</label>
                    <div class="flex space-x-8 justify-center">

                        <label class="flex items-center cursor-pointer">
                            <input type="radio"
                                   asp-for="Input.Role"
                                   value="Employee"
                                   checked="checked"
                                   class="role-radio h-4 w-4" />
                            <span class="ml-2 role-option-label">Employee</span>
                        </label>

                        <label class="flex items-center cursor-pointer">
                            <input type="radio"
                                   asp-for="Input.Role"
                                   value="Admin"
                                   class="role-radio h-4 w-4" />
                            <span class="ml-2 role-option-label">Admin</span>
                        </label>
                    </div>
                    <span asp-validation-for="Input.Role" class="text-red"></span>
                </div>

                <button type="submit" class="submit-btn">Create Account</button>

                <div class="login-link-container">
                    Already have an account? <a asp-page="/Login">Login here</a>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}